   "source": [
    "sentence = input(\"Enter a sentence: \").strip()\n",
    "count, in_word = 0, False\n",
    "\n",
    "for char in sentence:\n",
    "    if char != \" \" and not in_word:\n",
    "        count += 1\n",
    "        in_word = True\n",
    "    elif char == \" \":\n",
    "        in_word = False\n",
    "\n",
    "print(\"Word count:\", count)\n"
   ]
