   "source": [
    "def unique_words(sentence):\n",
    "    words = sentence.split()\n",
    "    counter = {}\n",
    "    for w in words:\n",
    "        counter[w] = counter.get(w, 0) + 1\n",
    "    return counter\n",
    "\n",
    "\n",
    "s = input(\"Enter a sentence: \")\n",
    "print(unique_words(s))"
   ]
  }
