   "source": [
    "def count_words_in_file(file_path):\n",
    "    with open(file_path, \"r\", encoding=\"utf-8\") as f:\n",
    "        text = f.read()\n",
    "    words = text.split()\n",
    "    return len(words)\n",
    "\n",
    "\n",
    "file_path = \"example.txt\"\n",
    "word_count = count_words_in_file(file_path)\n",
    "print(f\"The file contains {word_count} words.\")"
   ]
  }
